<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>

      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">

          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5 ">

  <div class="d-flex flex-row mb-5 col-md-10 col-12 mx-auto pl-1">
    <div class="mr-auto">
      <form action="/restaurants/new" method="get">
        <a href="/restaurants/new" class="btn btn-warning">Create</a>
      </form>
    </div>

    <div class="input-group-append">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">排序</button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#">A -> Z</a>
        <a class="dropdown-item" href="#">Z -> A</a>
        <a class="dropdown-item" href="#">類別</a>
        <a class="dropdown-item" href="#">地區</a>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}/detail" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            {{!-- card body --}}
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{{this.rating}}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            {{!-- card footer --}}
            <div class="card-footer text-right">
              <form action="/restaurants/{{{this.id}}}/delete?_method=DELETE" method="POST">
                <a href="/restaurants/{{{this.id}}}/edit" class="btn btn-secondary p-1 mt-2">Edit</a>
                <a href="/restaurants/{{{this.id}}}/detail" class="btn btn-secondary p-1 mt-2">Detail</a>
                <button type="submit" class="btn btn-danger p-1 mt-2">Delete</button>
              </form>
            </div>

          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
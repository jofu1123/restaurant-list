<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>

<div class="container">
  <form action="/restaurants/{{{restaurant.id}}}/edit" method="post" class="mb-5">
    <div class="input-group mb-3">
      <label class="mr-3">Restaurant Name :</label>
      <input type="text" name="name" placeholder="Restaurant Name" value="{{{restaurant.name}}}"
        required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">En Restaurant Name :</label>
      <input type="text" name="name_en" placeholder="En Restaurant Name" value="{{{restaurant.name_en}}}"
        required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Category :</label>
      <input type="text" name="category" placeholder="Category" value="{{{restaurant.category}}}"
        required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Image :</label>
      <input type="url" name="image" placeholder="Image" value="{{{restaurant.image}}}" required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Location :</label>
      <input type="text" name="location" placeholder="Location" value="{{{restaurant.location}}}"
        required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Phone :</label>
      <input type="text" name="phone" placeholder="Phone" value="{{{restaurant.phone}}}" required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Google map :</label>
      <input type="text" name="google_map" placeholder="Google map" value="{{{restaurant.google_map}}}"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Rating :</label>
      <input type="number" name="rating" placeholder="Rating" min="0.1" max="5" step="0.1"
        value="{{{restaurant.rating}}}"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Description :</label><input type="text" name="description" placeholder="Description"
        required="required" value="{{{restaurant.description}}}" required="required"><br>
    </div>
    <button type="submit" class="btn btn-light">Done</button>
    <a href="/" class="btn btn-danger ml-2">Cancel</a>
  </form>
</div>
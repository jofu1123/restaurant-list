<div class="row mt-5 mb-5">
  <div class="col-md-7 mx-auto">
    <div class="card card-body">
      <h1 class="text-center mb-5">Login</h1>

      {{> messages}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control" />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" placeholder="Enter Password" class="form-control mb-4" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
      </form>

      <p class="mt-5">No Account? <a href="/users/register">Register</a></p>
    </div>
  </div>
</div>
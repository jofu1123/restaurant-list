<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>

<div class="container">
  <form action="/restaurants" method="post" class="mb-5">
    <div class="input-group mb-3">
      <label class="mr-3">Restaurant Name :</label>
      <input type="text" name="name" placeholder="Restaurant Name" required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">En Restaurant Name :</label>
      <input type="text" name="name_en" placeholder="En Restaurant Name" required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Category :</label>
      <input type="text" name="category" placeholder="Category" required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Image :</label>
      <input type="url" name="image" placeholder="Image" required="required"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Location :</label>
      <input type="text" name="location" placeholder="Location"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Phone :</label>
      <input type="text" name="phone" placeholder="Phone"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Google map :</label>
      <input type="text" name="google_map" placeholder="Google map"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Rating :</label>
      <input type="number" name="rating" placeholder="Rating" min="0.1" max="5" step="0.1"><br>
    </div>
    <div class="input-group mb-3">
      <label class="mr-3">Description :</label><input type="text" name="description" placeholder="Description"
        required="required"><br>
    </div>
    <button type="submit" class="btn btn-light">Submit</button>
  </form>
</div>